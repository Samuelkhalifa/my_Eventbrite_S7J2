<!DOCTYPE html>
<html>
  <head>
    <title>MyEventbrite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"/>
    <link rel="stylesheet" href="style.css"/>
  </head>

  <body>
    <nav class="navbar navbar-expand navbar-light bg-light">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto ">

            <% if user_signed_in? %>
            <li class="nav-item mx-2"><%= link_to "Home", root_path %></li>
            <li class="nav-item mx-2"><%= link_to "My profile", root_path %></li>
            <li class="nav-item mx-2"><%= link_to "New event", new_event_path %></li>
            <li class="nav-item mx-2"><%= link_to "Sign out", destroy_user_session_path %></li>
        
            <% else %>

            <li class="nav-item mx-2"><%= link_to "Home", root_path %></li>
            <li class="nav-item mx-2"><%= link_to "New event", new_event_path %></li>
            <li class="nav-item mx-2"><%= link_to "Sign in", new_user_session_path %></li>
            <li class="nav-item mx-2"><%= link_to "Sign up", new_user_registration_path %></li>

            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <main>
    <%= yield %>
    </main>
  </body>
</html>
